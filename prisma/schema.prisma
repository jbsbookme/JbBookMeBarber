generator client {
    provider = "prisma-client-js"
    binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
    output = "/home/ubuntu/barberia_app/nextjs_space/node_modules/.prisma/client"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

// NextAuth.js Models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Application Models
enum Role {
  ADMIN
  BARBER
  CLIENT
}

enum AppointmentStatus {
  PENDING
  CONFIRMED
  COMPLETED
  CANCELLED
  NO_SHOW
}

enum PaymentMethod {
  ZELLE
  CASHAPP
  PAYPAL
  CASH
  CREDIT_CARD
}

enum DayOfWeek {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY
  SUNDAY
}

enum ExpenseCategory {
  RENT
  UTILITIES_WATER
  UTILITIES_ELECTRICITY
  SUPPLIES
  MAINTENANCE
  MARKETING
  SALARIES
  OTHER
}

enum PaymentStatus {
  PENDING
  PAID
  OVERDUE
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String?
  role          Role      @default(CLIENT)
  phone         String?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts           Account[]
  sessions           Session[]
  barber             Barber?
  appointmentsAsClient Appointment[] @relation("ClientAppointments")
  reviewsGiven       Review[]      @relation("ClientReviews")
  invoices           Invoice[]     @relation("InvoiceRecipient")

  @@index([email])
}

model Barber {
  id           String   @id @default(cuid())
  userId       String   @unique
  bio          String?  @db.Text
  specialties  String?
  hourlyRate   Float?
  isActive     Boolean  @default(true)
  profileImage String?
  phone        String?
  facebookUrl  String?
  instagramUrl String?
  twitterUrl   String?
  tiktokUrl    String?
  youtubeUrl   String?
  whatsappUrl  String?
  zelleEmail   String?  // Email for Zelle payments
  zellePhone   String?  // Phone for Zelle payments
  cashappTag   String?  // CashApp $cashtag (e.g., $username)
  rating       Float?   @default(5.0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user          User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  services      Service[]
  appointments  Appointment[]
  reviews       Review[]
  availability  Availability[]
  payments      BarberPayment[]
  media         BarberMedia[]
  daysOff       DayOff[]

  @@index([userId])
  @@index([isActive])
}

model Service {
  id          String   @id @default(cuid())
  name        String
  description String?  @db.Text
  duration    Int      // Duration in minutes
  price       Float
  image       String?  // Service image URL
  barberId    String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  barber       Barber?       @relation(fields: [barberId], references: [id], onDelete: SetNull)
  appointments Appointment[]

  @@index([barberId])
  @@index([isActive])
}

model Appointment {
  id                   String            @id @default(cuid())
  clientId             String
  barberId             String
  serviceId            String
  date                 DateTime
  time                 String
  status               AppointmentStatus @default(PENDING)
  paymentMethod        PaymentMethod?
  paymentStatus        PaymentStatus     @default(PENDING) // Payment confirmation status
  paymentReference     String?           // Optional payment reference/transaction ID
  notes                String?           @db.Text
  cancelledAt          DateTime?         // When the appointment was cancelled
  cancellationReason   String?           @db.Text
  notification24hSent  Boolean           @default(false) // 24 hours before notification
  notification2hSent   Boolean           @default(false) // 2 hours before notification
  thankYouSent         Boolean           @default(false) // Thank you after completion
  createdAt            DateTime          @default(now())
  updatedAt            DateTime          @updatedAt

  client  User     @relation("ClientAppointments", fields: [clientId], references: [id], onDelete: Cascade)
  barber  Barber   @relation(fields: [barberId], references: [id], onDelete: Cascade)
  service Service  @relation(fields: [serviceId], references: [id], onDelete: Restrict)
  review  Review?
  invoice Invoice?

  @@index([clientId])
  @@index([barberId])
  @@index([serviceId])
  @@index([date])
  @@index([status])
}

model Review {
  id               String    @id @default(cuid())
  appointmentId    String    @unique
  clientId         String
  barberId         String
  rating           Int       // 1-5 stars
  comment          String?   @db.Text
  adminResponse    String?   @db.Text  // Admin response to the review
  adminRespondedAt DateTime? // When admin responded
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  appointment Appointment @relation(fields: [appointmentId], references: [id], onDelete: Cascade)
  client      User        @relation("ClientReviews", fields: [clientId], references: [id], onDelete: Cascade)
  barber      Barber      @relation(fields: [barberId], references: [id], onDelete: Cascade)

  @@index([clientId])
  @@index([barberId])
  @@index([rating])
}

model Availability {
  id        String    @id @default(cuid())
  barberId  String
  dayOfWeek DayOfWeek
  startTime String
  endTime   String
  isAvailable Boolean @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  barber Barber @relation(fields: [barberId], references: [id], onDelete: Cascade)

  @@unique([barberId, dayOfWeek])
  @@index([barberId])
}

model Settings {
  id        String   @id @default(cuid())
  shopName  String   @default("Mi Barbería")
  shopLogo  String?
  address   String?
  phone     String?
  email     String?
  qrCode    String?
  latitude  Float?   // GPS coordinates for location
  longitude Float?
  // Social Media Links
  facebook  String?
  instagram String?
  twitter   String?
  tiktok    String?
  youtube   String?
  whatsapp  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model BarberPayment {
  id          String        @id @default(cuid())
  barberId    String
  amount      Float
  weekStart   DateTime      // Start of the week for this payment
  weekEnd     DateTime      // End of the week for this payment
  status      PaymentStatus @default(PENDING)
  paidAt      DateTime?
  notes       String?       @db.Text
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  barber  Barber   @relation(fields: [barberId], references: [id], onDelete: Cascade)
  invoice Invoice?

  @@index([barberId])
  @@index([weekStart])
  @@index([status])
}

model Expense {
  id             String          @id @default(cuid())
  category       ExpenseCategory
  customCategory String?         // For "OTHER" category
  amount         Float
  description    String?         @db.Text
  date           DateTime
  notes          String?         @db.Text
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt

  @@index([category])
  @@index([date])
}

model CustomExpenseCategory {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum MediaType {
  PHOTO
  VIDEO
}

model BarberMedia {
  id                 String    @id @default(cuid())
  barberId           String
  cloud_storage_path String    // S3 path to the photo or video
  isPublic           Boolean   @default(true) // Public files for portfolio
  mediaType          MediaType @default(PHOTO)
  title              String?
  description        String?   @db.Text
  isActive           Boolean   @default(true)
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt

  barber Barber @relation(fields: [barberId], references: [id], onDelete: Cascade)

  @@index([barberId])
  @@index([isActive])
}

model DayOff {
  id          String   @id @default(cuid())
  barberId    String
  date        DateTime // Specific day off
  reason      String?  @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  barber Barber @relation(fields: [barberId], references: [id], onDelete: Cascade)

  @@unique([barberId, date])
  @@index([barberId])
  @@index([date])
}

enum InvoiceType {
  BARBER_PAYMENT // Factura para pago de barbero al admin
  CLIENT_SERVICE // Factura de servicio para el cliente
}

model Invoice {
  id              String      @id @default(cuid())
  invoiceNumber   String      @unique // Número de factura único (ej: INV-2024-0001)
  type            InvoiceType
  
  // Referencias opcionales
  barberPaymentId String?     @unique // Si es factura de pago de barbero
  appointmentId   String?     @unique // Si es factura de servicio a cliente
  
  // Información del emisor (la barbería)
  issuerName      String
  issuerAddress   String?
  issuerPhone     String?
  issuerEmail     String?
  
  // Información del destinatario
  recipientId     String?     // Usuario (barbero o cliente) - opcional para facturas sin usuario registrado
  recipientName   String
  recipientEmail  String
  recipientPhone  String?
  
  // Detalles financieros
  amount          Float
  description     String      @db.Text
  items           Json?       // Array de items detallados
  
  // Fechas
  issueDate       DateTime    @default(now())
  dueDate         DateTime?   // Para facturas de pago de barberos
  paidAt          DateTime?   // Cuando se pagó
  
  // Estado
  isPaid          Boolean     @default(false)
  
  // PDF storage
  pdfPath         String?     // Ruta al PDF generado
  
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  
  // Relaciones
  barberPayment   BarberPayment? @relation(fields: [barberPaymentId], references: [id], onDelete: SetNull)
  appointment     Appointment?   @relation(fields: [appointmentId], references: [id], onDelete: SetNull)
  recipient       User?          @relation("InvoiceRecipient", fields: [recipientId], references: [id], onDelete: Cascade)
  
  @@index([invoiceNumber])
  @@index([type])
  @@index([recipientId])
  @@index([issueDate])
  @@index([isPaid])
}

model GalleryImage {
  id                 String    @id @default(cuid())
  cloud_storage_path String    // S3 path to the image
  isPublic           Boolean   @default(true)
  title              String
  description        String?   @db.Text
  order              Int       @default(0) // Para ordenar las imágenes
  isActive           Boolean   @default(true)
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt

  @@index([isActive])
  @@index([order])
}
